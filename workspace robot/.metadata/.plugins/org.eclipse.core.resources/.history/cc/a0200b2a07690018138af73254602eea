package de.fynn.training.controlled;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Scanner;

public class SmallTalkKI  {
    static boolean var = false;
   public static Scanner scan = new Scanner(System.in);
	public static void main(String[] args) throws IOException{
		
		InputStreamReader isr = new InputStreamReader(System.in);
		BufferedReader br = new BufferedReader(isr);
		
		do{  
			System.out.print("Sag etwas zu James:");
	        String eingabe = br.readLine();
	     if(eingabe.equalsIgnoreCase("hi")) { 
			System.out.println("Hallo wie geht es dir?");
			var = false;
		    eingabe= br.readLine();
		     if(eingabe.equalsIgnoreCase("Gut")) {
		    	System.out.println("Das gefällt mir");
		     }else if(eingabe.equalsIgnoreCase("schlecht")) {
		    	System.out.println("Schade! Was bedrückt dich denn ?");
		    	System.out.print("Sag etwas zu James:");
		          eingabe = br.readLine();
		         if(eingabe.equals("var")) {
		        	 System.out.println("var");
		        	
		         
		       
		         }   
				  
		     }
	     }
	     else if (eingabe.equals("Wie spät ist es?")) {
	    	 System.out.println("Es ist " + Clock.getTime() +" Uhr!");
	     } else if(eingabe.equals("Stelle Wecker")) {
	    	  System.out.println("Wie spät?");
	    	AlarmClock.alarm(scan.nextLine());
	    	System.out.println("Wecker wurde gestellt!");
	    	  
	     } else if(eingabe.equals("Stelle Timer")) {
	    	 System.out.println("Wie lange?");
	    	 String text = Timer.scan.nextLine();
	    	 Scanner s = new Scanner(text);
	    	 int time = s.nextInt();
	    	 String t;
	    	 int secs = Timer.s ;
	    	 int minutes = Timer.m ;
	    	 int hours = Timer.h;
	    	 
             // Seconds
	    	 if(text.contains(Timer.seconds) || text.contains(Timer.second)) {
		    		secs = Timer.s + time;
		    		if(secs >= 60){
		    			Timer.m ++;
		    			secs = secs - 60;
		    		}
		    		if(secs < 10){
		    		String timeall = Timer.h + ":" + Clock.getTimeMinutes() + ":0" + secs;
		    		Timer.alarm(timeall);
		    		secs = Timer.s;
		    		}if(secs >= 10 ){
		    			String timeall = Timer.h + ":" + Clock.getTimeMinutes() + ":" + secs;
		    			Timer.alarm(timeall);
		    			secs = Timer.s;
		    		}
		    		}
	    	 
	    	 
	    	 // Minutes
	    	 
	    	  if(text.contains(Timer.minute) || text.contains(Timer.minutes)){
		    		 minutes = Timer.m + time;
		    		 if(minutes >= 60){
			    			Timer.h ++;
			    			minutes = minutes - 60;
			    		}
			    		if(minutes < 10){
			    		String timeall = Timer.h + ":0" + minutes + ":" + Timer.s;
			    		Timer.alarm(timeall);
			    		}else {
			    			String timeall = Timer.h + ":" + minutes + ":" + Timer.s;
			    			Timer.alarm(timeall);
			    		}
		    	 }
	    	
	     }
	    	 else{
	    	 System.out.println("Wie bitte? Kannst du das bitte nocheinmal wiederholen?");
	     } 
		}
	while(var == false);
	}
	
		}


